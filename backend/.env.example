# ============================================
# HARDWARE STORE BACKEND - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3001

# ============================================
# DATABASE
# ============================================
# SQLite (default for development)
DATABASE_URL="file:./dev.db"

# PostgreSQL (for production)
# DATABASE_URL="postgresql://user:password@localhost:5432/hardware_store?schema=public"

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ============================================
# SMS CONFIGURATION (Philippines)
# ============================================
# Enable SMS sending (set to false to disable all SMS)
SMS_ENABLED=false

# Test mode - validates and logs but doesn't actually send SMS
# Useful for testing without consuming SMS credits
SMS_TEST_MODE=true

# Sender name (max 11 characters, must be registered with provider)
# For Semaphore: needs approval for custom sender names
SMS_SENDER_NAME=HARDWARE

# Provider priority (comma-separated, will fallback to next on failure)
# Options: semaphore, movider, vonage
SMS_PROVIDERS=semaphore

# Max retry attempts per SMS
SMS_MAX_RETRIES=2

# Admin phone to receive new order notifications (Philippine format: 09XXXXXXXXX)
ADMIN_NOTIFICATION_PHONE=09171234567

# ----------------------------------------
# SEMAPHORE (Recommended for Philippines)
# ----------------------------------------
# Sign up: https://semaphore.co/
# Pricing: ~0.35 PHP per SMS
# Coverage: All PH networks (Globe, Smart, Sun, TNT, DITO, TM)
SEMAPHORE_API_KEY=your_semaphore_api_key

# ----------------------------------------
# MOVIDER (Backup option for Philippines)
# ----------------------------------------
# Sign up: https://movider.co/
# Coverage: All PH networks
MOVIDER_API_KEY=your_movider_api_key
MOVIDER_API_SECRET=your_movider_api_secret

# ----------------------------------------
# VONAGE/NEXMO (International option)
# ----------------------------------------
# Sign up: https://dashboard.nexmo.com/
# Note: International rates may be higher
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret

# ============================================
# STORE INFORMATION
# ============================================
STORE_NAME=Juan's Hardware Store
STORE_PHONE=09171234567
STORE_ADDRESS=123 Main St, Barangay Sample, City, Philippines

# ============================================
# CORS / FRONTEND
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# FILE UPLOADS
# ============================================
# Max file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

