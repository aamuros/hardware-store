# ============================================
# HARDWARE STORE BACKEND - Production Environment
# ============================================
# Copy this file to .env for production deployment

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3001

# ============================================
# DATABASE (PostgreSQL for Production)
# ============================================
# PostgreSQL connection string from your hosting provider
# Examples:
# - Railway: postgresql://postgres:xxxxx@containers-xyz.railway.app:5432/railway
# - Supabase: postgresql://postgres:xxxxx@db.xxxxx.supabase.co:5432/postgres
# - Neon: postgresql://user:password@xxxxx.neon.tech/dbname
DATABASE_URL="postgresql://user:password@host:5432/hardware_store?schema=public"

# ============================================
# JWT AUTHENTICATION
# ============================================
# IMPORTANT: Generate a strong secret with: openssl rand -base64 64
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_HERE_MINIMUM_32_CHARACTERS
JWT_EXPIRES_IN=7d

# ============================================
# SMS CONFIGURATION (Philippines)
# ============================================
SMS_ENABLED=true
SMS_TEST_MODE=false
SMS_SENDER_NAME=HARDWARE
SMS_PROVIDERS=semaphore
SMS_MAX_RETRIES=2
ADMIN_NOTIFICATION_PHONE=09XXXXXXXXX

# Semaphore (Primary - Best for Philippines)
SEMAPHORE_API_KEY=your_semaphore_api_key

# ============================================
# STORE INFORMATION
# ============================================
STORE_NAME=Juan's Hardware Store
STORE_PHONE=09171234567
STORE_ADDRESS=123 Main St, City, Philippines

# ============================================
# CORS / FRONTEND
# ============================================
# IMPORTANT: Set this to your production frontend URL
FRONTEND_URL=https://your-frontend-domain.vercel.app

# ============================================
# FILE UPLOADS
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
