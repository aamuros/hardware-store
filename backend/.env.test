# ============================================
# HARDWARE STORE BACKEND - Test Environment
# ============================================
# This file is used exclusively for running tests.
# Tests use a separate database to avoid wiping development data.

NODE_ENV=test

# ============================================
# TEST DATABASE (Separate PostgreSQL database!)
# ============================================
# Create a test database: createdb hardware_store_test
# Or with Docker: docker exec hw-pg psql -U postgres -c 'CREATE DATABASE hardware_store_test;'
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hardware_store_test?schema=public"

# ============================================
# JWT (Test only - not secure for production)
# ============================================
JWT_SECRET=test-secret-key-for-testing-only-do-not-use-in-production
JWT_EXPIRES_IN=1d

# ============================================
# SMS (Disabled for tests)
# ============================================
SMS_ENABLED=false
SMS_TEST_MODE=true

# ============================================
# EMAIL (Test mode for tests)
# ============================================
EMAIL_TEST_MODE=true

# ============================================
# CORS
# ============================================
FRONTEND_URL=http://localhost:5173
